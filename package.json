{
  "name": "mcp-playwright",
  "private": true,
  "scripts": {
    "smoke": "playwright test tests/smoke/comprehensive-smoke.spec.js",
    "smoke:headed": "playwright test tests/smoke/comprehensive-smoke.spec.js --headed",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:notify": "npm run notify:started && playwright test && npm run notify:completed || npm run notify:failed",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "allure:serve": "allure serve allure-results",
    "allure:upload": "npm run allure:generate && node utils/s3-uploader.js",
    "test:allure": "playwright test && npm run allure:serve",
    "notify:started": "node scripts/notify-test-results.js --status started",
    "notify:completed": "node scripts/notify-test-results.js --status completed",
    "notify:failed": "node scripts/notify-test-results.js --status failed"
  },
  "devDependencies": {
    "@playwright/mcp": "^0.0.59",
    "@playwright/test": "^1.59.0-alpha-1769364499000",
    "allure-commandline": "^2.36.0",
    "allure-playwright": "^3.4.5",
    "playwright": "^1.59.0-alpha-1769364499000"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.975.0",
    "@aws-sdk/lib-storage": "^3.975.0"
  }
}
